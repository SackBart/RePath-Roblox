{
	"name": "repath",
	"displayName": "RePath Roblox",
	"description": "Makes moving module scripts easier",
	"version": "0.0.7",
	"publisher": "SackBart",
	"icon": "Icon.png",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SackBart/Move-Modules-Roblox.git"
	},
	"engines": {
		"vscode": "^1.100.0"
	},
	"categories": [
		"Extension Packs"
	],
	"keywords": [
		"Roblox",
		"RePath",
		"Refactoring",
		"Utility",
		"Util",
		"ModuleScript",
		"Script",
		"Moving"
	],
	"pricing": "Free",
	"activationEvents": [
		"workspaceContains:**/*.lua",
		"workspaceContains:**/*.luau"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "repath.createIgnore",
				"title": "Create a .repathignore File"
			}
		],
		"configuration": {
			"title": "RePath Settings",
			"properties": {
				"repath.notifyUserOnChanged": {
					"type": "boolean",
					"default": false,
					"description": "Notifies the user whether they want to apply Refactoring when they move files"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/node": "^22.19.11",
		"@types/vscode": "^1.100.0",
		"eslint": "^9.13.0",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0"
	},
	"dependencies": {
		"ignore": "^7.0.5"
	}
}
